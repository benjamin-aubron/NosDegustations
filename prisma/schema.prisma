generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model comment {
  id        String   @id @default(cuid())
  comment   String
  createdAt DateTime @default(now())
}

model vin {
  id           String   @id @default(cuid())
  tasted       Boolean
  appelation   String
  region       String
  type         String
  tastingDate  DateTime?
  domain       String?
  year         Int?
  alcohol      Int?
  photo        String?
  cepage       Json?
  noteClem     Int?
  commentClem  String?
  noteBenji    Int?
  commentBenji String?
  createdAt    DateTime @default(now())
}
